<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.StartFragment">
    <ImageView
        android:id="@+id/header_Img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="350dp"
        android:src="@drawable/header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAMS"
        android:fontFamily="@font/segoe_print"
        android:textSize="50dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="80dp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="266dp"
        android:src="@drawable/grad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="app"
        android:textStyle="bold"
        android:fontFamily="@font/segoe_print"
        android:textSize="40dp"
        android:textColor="#707070"
        android:layout_marginTop="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="164dp"
        app:layout_constraintStart_toStartOf="parent "
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/prof_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/orange"
        android:fontFamily="@font/micross"
        android:hint="Professor"
        android:textAllCaps="false"
        android:textColorHint="#F7F4F7"
        android:padding="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        app:cornerRadius="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/std_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/micross"
        android:hint="Student"
        android:textAllCaps="false"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/white"
        android:padding="15dp"
        app:strokeColor="@color/orange"
        app:strokeWidth="3dp"
        app:cornerRadius="30dp"
        android:textColorHint="#FC6011"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/prof_btn"
        app:layout_constraintHorizontal_bias="0.597"
        app:layout_constraintStart_toStartOf="@id/prof_btn"
        app:layout_constraintTop_toBottomOf="@id/prof_btn" />

    <TextView
        android:id="@+id/SignUpAs_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/micross"
        android:text="login as"
        android:textSize="20sp"
        android:layout_marginTop="290dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <View
        android:layout_width="110dp"
        android:layout_height="2dp"
        android:background="#707070"
        android:layout_marginTop="300dp"
        app:layout_constraintStart_toStartOf="@id/prof_btn"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/SignUpAs_tv"
        />

    <View
        android:layout_width="110dp"
        android:layout_height="2dp"
        android:layout_marginTop="300dp"
        app:layout_constraintStart_toEndOf="@id/SignUpAs_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="4dp"
        app:layout_constraintEnd_toEndOf="@id/prof_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#707070"/>






</androidx.constraintlayout.widget.ConstraintLayout>